<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="deft_bootstrap.form.types_not_supporting_error_bubbling" type="collection">
            <parameter>button</parameter>
            <parameter>submit</parameter>
            <parameter>reset</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="deft_bootstrap.form.type.composite" class="Deft\BootstrapBundle\Form\Type\CompositeType">
            <argument>%deft_bootstrap.form.types_not_supporting_error_bubbling%</argument>
            <tag name="form.type" alias="composite" />
        </service>

        <service id="deft_bootstrap.form.type.single_text_date" class="Deft\BootstrapBundle\Form\Type\SingleTextDateType">
            <tag name="form.type" alias="single_text_date" />
        </service>

        <service id="deft_bootstrap.form.type_extension.label" class="Deft\BootstrapBundle\Form\Extension\LabelExtension">
            <tag name="form.type_extension" alias="form" />
        </service>

        <service id="deft_bootstrap.form.type_extension.choice" class="Deft\BootstrapBundle\Form\Extension\BootstrapChoiceExtension">
            <tag name="form.type_extension" alias="choice" />
        </service>

        <service id="deft_bootstrap.form.type_extension.help" class="Deft\BootstrapBundle\Form\Extension\BootstrapHelpExtension">
            <tag name="form.type_extension" alias="form" />
        </service>

        <service id="deft_bootstrap.form.type_extension.button" class="Deft\BootstrapBundle\Form\Extension\BootstrapButtonExtension">
            <tag name="form.type_extension" alias="button" />
        </service>
    </services>
</container>
